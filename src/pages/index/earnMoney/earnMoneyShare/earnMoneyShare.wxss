.share{
  width: 750rpx;
  box-sizing: border-box;
  padding: 10rpx;
  background: #ff3c1e;
}
.head{
  height: 730rpx;
  background: #f5f5f5;
  position: relative;
}
.img-pit{
  width: 730rpx;
  height: 730rpx;
}
.logo{
  width: 220rpx;
  height: 90rpx;
  border-radius: 0 0 15rpx 15rpx;
  position: absolute;
  top: 0;
  right: 20rpx;
}
.container{
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx 40rpx;
}
.title{
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1b1b1b;
  box-sizing: border-box;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  margin-bottom: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.con{
  display: flex;
  justify-content: space-between;
}
.con-l{
  width: 420rpx;
  display: flex;
  flex-direction: column;
}
.con-l-head{
  display: flex;
  align-items: center;
}
.img-quan{
  width: 140rpx;
  height: 114rpx;
  margin-right: 20rpx;
  background: #eee;
}
.con-l-price{
  font-size: 76rpx;
  font-weight: 700;
  color: #1b1b1b;
  margin-right: 10rpx;
}
.con-l-syn{
  display: flex;
  flex-direction: column;
}
.rmb{
  font-size: 36rpx;
  color: #000;
  line-height: 42rpx;
}
.postage{
  font-size: 30rpx;
  color: #ff3c1e;
  line-height: 36rpx;
}
.con-l-dsc{
  font-size: 18rpx;
  color: #646464;
}
.con-r{
  width: 220rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border: 1rpx solid #eee;
  border-radius: 15rpx;
  padding: 20rpx;
  align-items: center;
}
.share-qr{
  width: 178rpx;
  height: 178rpx;
  background: #eee;
}
.anjian{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}
.img-an{
  width: 28rpx;
  height: 28rpx;
  background: #eee;
  margin-right: 15rpx;
}
.an-text{
  font-size: 24rpx;
  color: #ff3c1e;
}
.qr-text{
  font-size: 20rpx;
  color: #666464;
}
.btn{
  display: block;
  width: 178rpx;
  height: 54rpx;
  font-size: 30rpx;
  color: #fff;
  background: #ff3c1e;
  border-radius: 27rpx;
  line-height: 54rpx;
  text-align: center;
  margin-top: 25rpx;
}