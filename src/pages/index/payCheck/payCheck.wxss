  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.des {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 16rpx;
}

.class {
  font-size: 28rpx;
  color: #000;
  line-height: 42rpx;
}

.money {
  font-size: 22rpx;
  color: #999;
  line-height: 36rpx;
}

.btn {
  position: relative;
  top: 16rpx;
