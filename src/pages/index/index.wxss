.big{
  height:250rpx;
}
.near-big {
  width: 710rpx;
  padding: 0 20rpx 0;
  background-color: #fff;
}
.swiper-item-hot{
  width: 710rpx;
  height: 250rpx;
  border-radius: 20rpx;
}
.hot-shop {
  width: 710rpx;
  height: 250rpx;
  display: flex;
}
.hot-shop-detail{
  width: 220rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  background: -webkit-linear-gradient(left top, #ffc307 , #ff8a00);
  padding: 20rpx 10rpx 12rpx;
  box-sizing: border-box;
}
.hot-shop-logo{
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  margin: 0 auto 10rpx;
}
.catName{
  font-size: 26rpx;
  line-height: 46rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.distance{
  display: flex;
  justify-content: space-between;
}
.logo{
  width: 70rpx;
  height: 35rpx;
}
.symb{
  font-size: 18rpx;
  color: #fff;
}
.distanceText{
  font-size: 22rpx;
  color: #fff;
}
.hot-shop-url{
  width: 490rpx;
  height: 250rpx;
  background: #ff3c1e;
}
.small {
  height: 420rpx;
}
.near-small {
  width: 750rpx;
  margin-bottom: 12rpx;
  background-color: #fff;
}
.slideItem{
  display: flex;
  flex-wrap: wrap;
}
.slideSmall {
  width: 187.5rpx;
  height: 187.5rpx;
  box-sizing: border-box;
  padding: 26rpx;
  border: 2rpx solid #f5f5f5;
}
.shop-logo{
  width: 131.5rpx;
  height: 131.5rpx;
  border-radius: 10rpx;
}
.line{
  display: inline-block;
  width: 750rpx;
  height: 2rpx;
  background-color: #f5f5f5;
}
