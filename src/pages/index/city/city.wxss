  border-top: 1rpx solid #eee;
}
.list-item > view {
  line-height: 60rpx;
  font-size: 28rpx;
}
.right-nav {
  position: fixed;
  top: 200rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  width: 30rpx;
  text-align: center;
  font-size: 24rpx;
  z-index: 3;
}