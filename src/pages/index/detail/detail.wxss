}
.tobuy{
  background-color: #ff5a33;
}

.wait{
  background-color: #00aa6e !important;
}
.yellow {
  background-color: #ffc034 !important;
  color: #1b1b1b;
}
.grey{
  background-color: #51504f !important;
  color: #fff;
}
.popout{
  width: 100vw;
