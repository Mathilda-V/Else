@import "/static/style/common.wxss"

.detail {
  width: 750rpx;
  background-color: #f5f5f5;
  padding-bottom: 90rpx;
}
.swiper,
.swiper-image{
  width: 750rpx;
  height: 750rpx;
}
.price-left{
  flex: 12;
  box-sizing: border-box;
  height: 90rpx;
  padding: 20rpx 14rpx;
  background-color: #ff205e;
}
.priceSell{
  color: #666;
  margin-right: 20rpx;
}
.priceThrough{
  text-decoration: line-through;
  color: #999;
}
.price-through{
  text-decoration: line-through;
}
.remainder{
  flex: 8;
  box-sizing: border-box;
  height: 90rpx;
  padding: 20rpx 18rpx;
  background-color: #ffd839;
}
.thunder{
  flex-shrink: 0;
  width: 60rpx;
  height: 80rpx;
  margin-left: 14rpx;
}
.remainder-center{
  flex: 1;
  
}
.left-date{
  display: block;
  background: #ff205e;
  color: #ffd839;
  font-size: 12px;
  padding: 0 8rpx;
}

.title{
  line-height: 40rpx;
}
.level{
  width: 150rpx;
  height: 30rpx;
  line-height: 40rpx;
}

.arrow{
  width: 10rpx;
  height: 20rpx;
  /* background-color: #dddddd; */
}
.close{
  width: 40rpx;
  height: 40rpx;
  /* background-color: #dddddd; */
}
.avatar-con{
  min-height: 350rpx;
  justify-content: space-between;
}

.avatar{
  width: 70rpx;
  height: 70rpx;
  background-color: #dddddd;
}

.common-tag{
  flex-wrap: wrap;
}

.assess-item{
  padding: 6rpx 20rpx;
  text-align: center;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  background-color: #FFf5f5;
}

.coupon{
  width: 750rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  background-color: #f5f5f5;
  position: fixed;
  left: 0;
  bottom: -100vh;
  transition: bottom 0.3s ease-in-out;
}
.coupon-trans{
  bottom: 90rpx !important;
}
.coupon-title{
  border-radius: 20rpx 20rpx 0 0;
  background-color: #f5f5f5;
  border-bottom: 1px solid #eeeeee;
  max-height: 100rpx;
}
.coupon-con{
  width: 750rpx;
  padding: 0 40rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.coupon-item{
  height: 190rpx;
  margin-top: 40rpx;
}
.coupon-num{
  font-size: 76rpx;
  font-weight: 500;
  color: #ffffff;
}
.coupon-left{
  height: 190rpx;
  width: 190rpx;
  background-color: #ff5a33;
  border-radius: 16rpx 0 0 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.coupon-block{
  height: 190rpx;
  padding: 40rpx 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
  background-color: #ffffff;
}
.coupon-middle{
  width: 310rpx;
  align-items: flex-start;
  padding-left: 20rpx;
}
.coupon-right{
  width: 170rpx;
  align-items: center;
  border-radius: 0 16rpx 16rpx 0;
  border-left: 1px dashed #dddddd;
}
.coupon-get{
  padding: 8rpx 22rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #ff5a33;
}


.type-select{
  width: 750rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: -100vh ;
  transition: bottom 0.3s ease-in-out;
}
.type-trans{
  bottom: 0rpx !important;
}
.img-small{
  width: 150rpx;
  height: 150rpx;
}
.select-result{
  justify-content: space-between;
  min-height: 72rpx;
}
.select-close{
  align-self: flex-start;
  position: absolute;
  right: 16rpx;
}
.selector-con{
  flex-wrap: wrap;
}
.selector{
  padding: 5rpx 26rpx;
  border: 1px solid #dddddd;
  border-radius: 6rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
}
.selected{
  color: #e66d6d;
  border: 1px solid #e66d6d;
  padding: 4rpx 26rpx;
}

.stepper{
  border: 1px solid #dddddd;
  max-width: 150rpx;
}
.add-minus{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  cursor: pointer;
}
.times{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-left: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
  text-align: center;
}


.shop-logo{
  width: 66rpx;
  height: 66rpx;
}
.shop-btn{
  padding: 6rpx 22rpx;
  border: 1px solid #ff5a33;
  border-radius: 24rpx;
}
.orange-back{
