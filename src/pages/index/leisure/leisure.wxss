/* pages/leisure/leisure.wxss */
.leisure {
  width: 750rpx;
  background-color: #f5f5f5;
}
/* 搜索栏 */
.head {
  display: flex;
  width: 750rpx;
  padding: 12rpx 0;
  background-color: #ff451f;
}
.back {
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
  background-color: #ccc;  
}
.search {
  display: flex;
  align-items: center;
  width: 540rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  background-color: #fff;
}
.search-img {
  width: 30rpx;
  height: 30rpx;
  background-color: #ccc;
}
.search-txt {
  width: 460rpx;
  padding-left: 20rpx; 
  font-size: 26rpx;
}
 /* 小图标 */
.icon {
  display: flex;
  flex-wrap: wrap;
  width: 750rpx;
  padding: 15rpx 1rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.icon-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
  height: 150rpx; 
}
.icon-pic {
  display: inline-block;
  width: 95rpx;
  height: 95rpx; 
  background-color: #ccc;
}
.icon-txt {
  font-size: 24rpx;
}
/* 猜你喜欢 */
.maybe {
  width: 710rpx;
  padding: 20rpx;
  background-color: #fff;
}
.maybe-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head-left {
  font-size: 30rpx;
  font-weight: bolder;
}
.head-right {
  display: flex;
  align-items: center;
}
.r-txt {
  font-size: 22rpx;
  color: #929292;
}
.r-pic {
  width: 22rpx;
  height: 22rpx;
  margin-left: 10rpx;
  background-color: #ccc;
}
.scroll_box{
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0;
  background: #fff;
  white-space: nowrap;
}
.maybe-con{
  position: relative;
  width: 280rpx;
  margin-right: 16rpx;
  display: inline-block;
} 
.bgc {
  width: 280rpx;
  height: 200rpx;
  background-color: #ccc;
  margin-right:10rpx;
}
.cons {
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -123rpx;
  width: 246rpx;
  height: 90rpx;
  background-color: #ddd;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
} 
/* 分类搜索 */
.classified {
  display: flex;
  flex-wrap: wrap;
  width: 750rpx;
}
.topic {
  display: flex;
  width: 710rpx;
  padding: 0 20rpx;
  margin-bottom: 2rpx;
  background-color: #fff;
}
.genre {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.genre-txt {
  margin-right: 10rpx;
  line-height: 85rpx;
  font-size: 28rpx;
}
.genre-btn {
  width: 20rpx;
  height: 10rpx;
  background-color: #ccc;
}
/* 商家 */
.shop{
  width: 750rpx;
}
.shop-con {
  width: 750rpx;
  padding-top: 30rpx;
  padding-right: 0;
  margin-bottom: 20rpx;
  background-color: #fff;  
}
.con-top {
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 0 20rpx 30rpx 20rpx;
}
.con-pic {
  width: 168rpx;
  height: 168rpx;
  background-color: #ccc;
}
.con-txt {
  width: 520rpx;
  padding: 0 20rpx 10rpx 20rpx;
  background-color: #fff;
}
.txt-top {
  display: flex;
  align-items: center;
}
.top-ui {
  margin-right: 10rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.top-pic {
  display: inline-block;
  width: 33rpx;
  height: 33rpx;
  background-color: #ccc;
}
.txt-middle {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.middle-pic {
  width: 143rpx;
  height: 26rpx;
  background-color: #ccc;
  margin-right: 30rpx;
}
.middle-ui {
  font-size: 24rpx;
  color: #646464;
}
.txt-bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.bottom-txt {
  font-size: 26rpx;
  color: #646464;
}
.bottom-distance {
  font-size: 26rpx;
  color: #646464;  
}
.shop-coupon {
  display: flex;
  align-items: center;
  padding: 23rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5; 
}
.coupon-cash {
  padding: 0 20rpx;
  text-align: center;
}
.cash-now {
  width: 130rpx;
  line-height:  45rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #ff3c1e;
  border-radius: 10rpx 10rpx 0 0 ;
}
.cash-new {
  width: 126rpx;
  line-height:  45rpx;
  color: #ff3c1e;
  font-size:20rpx;
  border: 1rpx solid #ff3c1e;
  border-radius: 0 0 10rpx 10rpx;
}
.coupon-left {
  padding: 0 20rpx;
}
.left-txt {
  display: flex;
  align-items: center;
}
.coupon-pic {
  width: 30rpx;
  height: 30rpx;
  background-color: #ccc;
}
.coupon-price {
  display: flex;
  align-items: center; 
}
.coupon-txt {
  padding: 10rpx;
  font-size: 26rpx;
  color: #646464;  
}
.txt-spe {
  text-decoration: line-through;
}
.shop-else {
  width: 750rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.else-txt {
  font-size: 26rpx;
  color: #ff5a23;
}
.else-pic {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
  background-color: #ccc;
}