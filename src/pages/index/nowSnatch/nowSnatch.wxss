/* 图片 */
.pic {
  width: 750rpx;
  height: 323rpx;
}
/* 时间段 */
.period-area {
  width: 750rpx;
  white-space: nowrap;
  max-height: 140rpx;
}
.period-block {
  display: inline-block;
  min-width: 33.3%;
  background-color: #000000;
}
.period-con{
  padding: 10rpx 0;
}
.period-text {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  display: block;
}
.period-status {
  font-size: 23rpx;
  color: #fff;
  text-align: center;
  display: block;
}
.active {
  background-color: #ff0000;
}
.count-time {
  font-size: 36rpx;
  font-weight: 400;
  color: #fff;
  margin-left: 10rpx;
}
.count-else {
  display: flex;
  align-items: center;
  width: 710rpx;
  height: 115rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
}
.else-box {
  flex: 1;
  height: 2rpx;
  margin: 30rpx;
  background-color: #ccc;
}
.else-txt {
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #adadad;
}
.else-time {
  font-size: 26rpx;
  color: #000;
  font-weight: bold;
}
.fixed-con{
  position: fixed;
  top: 0;
  left: 0;
}
.scroller{
  padding-top: 420rpx;
}
/* 抢购 */
.panic-goods {
  width: 750rpx;
  padding: 0 20rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  display: flex;
}
.panic-left {
  display: flex;
  box-sizing: border-box;
  width: 540rpx;
  padding: 20rpx 14rpx;
  border-radius: 20rpx;
  background-color: #fff;
  font-size: 0;
  border-right: 2px dashed #f2f3f4;
}
.panic-pic {
  width: 200rpx;
  height: 200rpx;
  background-color: #ccc;
}
.info-con {
  width: 270rpx;
  padding: 5rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.title{
  font-size: 28rpx;
  color: #333333;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
}
.subtitle {
  max-width: 275rpx;
  font-size: 24rpx;
  color: #adadad;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.rmb{
  font-size: 26rpx;
  color: #ff3c1e;
}
.price {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 5rpx;
  color: #ff3c1e;
}
.line {
  margin: 20rpx 0;
  border-left: 4rpx dashed #ddd;
}
.panic-right {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.pro-pic {
  width: 100rpx;
  height: 70rpx;
}
.pro-num {
  font-size: 24rpx;
  color: #666666;
}
.pro-line {
  width: 135rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #ff4332;
  margin: 10rpx 0;
}
.pro-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 135rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background-color: #ff3c1e;
}
.btn-ui {
  font-size: 24rpx;
  color: #fff;
}
.btn-pic {
  width: 10rpx;
  height: 20rpx;
  margin-left: 15rpx;
}
.btn-sj{
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.text-green{
  color: #00aa6e;
}
.btn-green{
  color: #ffffff;
  background-color: #00aa6e;
}