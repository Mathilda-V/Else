/* 图片 */
.pic {
  width: 750rpx;
  height: 323rpx;
  background-color: #ccc;
}
/* 时间段 */
.timeCount {
  width: 750rpx;
  display: flex;
}
.count {
  flex: 1;
  background-color: #000;
  padding: 20rpx;
  text-align: center;
}
.spe {
  background-color: #ff0000;
}
.date-top {
  font-size: 24rpx;
  color: #fff;
}
.date-bottom {
  font-size: 22rpx;
  color: #fff;
}
.count-time {
  font-size: 36rpx;
  font-weight: 400;
  color: #fff;
}
.count-else {
  display: flex;
  align-items: center;
  width: 710rpx;
  height: 115rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
}
.else-box {
  flex: 1;
  height: 2rpx;
  margin: 30rpx;
  background-color: #ccc;
}
.else-txt {
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #adadad;
}
.else-time {
  font-size: 26rpx;
  color: #000;
  font-weight: bold;
}
/* 抢购 */
.goods {
  width: 710rpx;
  padding: 0 20rpx 10rpx 20rpx;
  padding-top: 0;
  display: flex;
}
.goods-con {
  display: flex;
  width: 540rpx;
  padding: 20rpx;
  border-radius: 30rpx 40rpx 40rpx 30rpx;
  background-color: #fff;
}
.con-pic {
  width: 200rpx;
  height: 200rpx;
  background-color: #ccc;
}
.con-txt {
  width: 270rpx;
  padding-left: 20rpx;
}
.txt-top {
  font-size: 30rpx;
  font-weight: bold;
}
.txt-middle {
  padding: 10rpx 0 20rpx 0;
  font-size: 24rpx;
}
.middle-ui {
  color: #adadad;
}
.bottom-ui {
  font-size: 26rpx;
  color: #25aa6b;
}
.bottom-ui1 {
  font-size: 20rpx;
  color: #adadad;
  margin-right: 5rpx;
}
.bottom-spe {
  font-size: 36rpx;
  font-weight: bolder;
  margin-right: 5rpx;  
}
.bottom-spe1 {
  text-decoration: line-through;
}
.line {
  margin: 20rpx 0;
  border-left: 4rpx dashed #ddd;
}
.progress {
  width: 167rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 40rpx 30rpx 30rpx 40rpx;
  text-align: center;
}
.pro-pic {
  width: 135rpx;
  height: 70rpx;
  background-color: #ccc;
}
.pro-num {
  display: block;
  font-size: 26rpx;
  color: #25aa6b;
}
.pro-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 135rpx;
  height: 48rpx;
  border-radius: 15rpx;
  margin-top: 15rpx;
  background-color: #25aa6b;
}
.btn-ui {
  font-size: 24rpx;
  color: #fff;
}
.btn-pic {
  width: 20rpx;
  height: 20rpx;
  margin-right: 5rpx;
  background-color: #ccc;
}